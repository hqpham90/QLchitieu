<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".them_activity">

    <Button
        android:id="@+id/btn_TroVe1"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="#F0D711"
        android:gravity="center"
        android:text="Trở Về"
        android:textColor="#070707"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edt_Ten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tên"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Chonngay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:text="Ngày"
            android:textColor="#070707"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/edt_Ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

    </LinearLayout>
    <![CDATA[

    />

    ]]>

    <EditText
        android:id="@+id/edt_sotien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Số Tiền"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edt_Noidung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nội Dung"
        android:inputType="textPersonName"
        android:textColor="#0E0D0D"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_luu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="#F0D711"
            android:text="Lưu"
            android:textColor="#070707"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_NhapMoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#F0D711"
            android:text="Nhập Mới"
            android:textColor="#070707"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_Xemtc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#F0D711"
            android:text="Xem"
            android:textColor="#070707"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>